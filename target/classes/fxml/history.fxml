<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.minipos.controller.HistoryController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: #121212;">

    <Label text="Transaction History" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e0e0e0;"/>

    <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
            <TableColumn fx:id="colCashier" text="Cashier" prefWidth="100"/>
            <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10">
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="btnDelete" text="Delete Selected" styleClass="button-primary" onAction="#handleDelete" />
    </HBox>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.minipos.controller.PosController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: #121212;">

    <!-- Left Side: Product Selection -->
    <VBox spacing="10" HBox.hgrow="ALWAYS">
        <Label text="Cashier" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e0e0e0;"/>
        
        <HBox spacing="10">
            <TextField fx:id="searchField" promptText="Search product by name or code..." HBox.hgrow="ALWAYS"/>
            <Button text="Search" onAction="#handleSearch" styleClass="button-primary"/>
        </HBox>
        
        <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCode" text="Code" prefWidth="80"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        
        <Button text="Add to Cart" onAction="#addToCart" styleClass="button-primary" maxWidth="Infinity"/>
    </VBox>

    <!-- Right Side: Cart & Checkout -->
    <VBox spacing="10" prefWidth="400" styleClass="card">
        <Label text="Current Transaction" styleClass="card-title"/>
        
        <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCartName" text="Item" prefWidth="150"/>
                <TableColumn fx:id="colCartQty" text="Qty" prefWidth="50"/>
                <TableColumn fx:id="colCartPrice" text="Price" prefWidth="80"/>
                <TableColumn fx:id="colCartTotal" text="Total" prefWidth="80"/>
            </columns>
             <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Remove Item" onAction="#removeFromCart"/>
        </HBox>
        
        <Separator/>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Discount (%):" style="-fx-text-fill: #e0e0e0;"/>
            <TextField fx:id="discountField" promptText="0" prefWidth="80"/>
            <Label text="Final Total:" style="-fx-font-size: 16px;"/>
            <Label fx:id="totalLabel" text="Rp 0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: -fx-success-color;"/>
        </HBox>
        
        <Button text="Checkout" onAction="#handleCheckout" styleClass="button-primary" style="-fx-font-size: 18px; -fx-padding: 15;" maxWidth="Infinity"/>
    </VBox>

</HBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.minipos.controller.ProductController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: #121212;">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Product Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e0e0e0;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Search products..." prefWidth="250"/>
        <Button text="Search" onAction="#handleSearch" styleClass="button-primary"/>
        <Button text="Import CSV" onAction="#handleImportCSV" styleClass="button-primary"/>
    </HBox>

    <HBox spacing="20">
        <!-- Product Form -->
        <VBox spacing="10" styleClass="card" prefWidth="300">
            <Label text="Add / Edit Product" styleClass="card-title"/>
            
            <TextField fx:id="codeField" promptText="Product Code"/>
            <TextField fx:id="nameField" promptText="Product Name"/>
            <TextField fx:id="priceField" promptText="Price"/>
            <TextField fx:id="stockField" promptText="Stock"/>
            <TextField fx:id="categoryField" promptText="Category"/>
            
            <HBox spacing="10">
                <Button text="Save" onAction="#handleSave" styleClass="button-primary" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                <Button text="Clear" onAction="#handleClear" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            </HBox>
            <Button text="Delete" onAction="#handleDelete" styleClass="button-danger" maxWidth="Infinity"/>
        </VBox>

        <!-- Product Table -->
        <TableView fx:id="productTable" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCode" text="Code" prefWidth="100"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                <TableColumn fx:id="colCategory" text="Category" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </HBox>

</VBox>
